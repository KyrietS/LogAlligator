<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:LogAlligator.App.Controls"
        mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="300"
        x:Class="LogAlligator.App.MainWindow"
        Title="LogAlligator App"
        Width="850"
        Height="400">

  <DockPanel>
    <Menu DockPanel.Dock="Top" >
      <MenuItem Header="_File">
        <MenuItem Header="_Open..." />
        <Separator />
        <MenuItem Header="_Exit" Command="{Binding $parent[Window].OnExit}" />
      </MenuItem>
      <MenuItem Header="Load data" Command="{Binding $parent[Window].OnLoadData}" />
      <MenuItem Header="Switch theme" Command="{Binding $parent[Window].OnSwitchTheme}"/>
    </Menu>
    
    <TabControl Padding="0">
        <TabItem Header="Example file">
        <controls:FileView /> 
        </TabItem>
      <TabItem Header="Another">
        <StackPanel>
          <TextBlock>Hello from another tab!</TextBlock>
        </StackPanel>
      </TabItem>
    </TabControl>
  </DockPanel>
</Window>
