<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800"
             x:Class="LogAlligator.App.Controls.StatusBar">
    <Design.PreviewWith>
        <Border Background="Red"></Border>
    </Design.PreviewWith>
    
    <Border Background="{DynamicResource ThemeControlMidBrush}"
            BorderBrush="{DynamicResource ThemeControlMidHighBrush}"
            BorderThickness="0 1 0 0"
            Padding="10 2"
            VerticalAlignment="Center">
        <TextBlock>Project loaded successfully</TextBlock>
        </Border>
</UserControl>

